<%= render 'shared/title', title: "Take Attendence" %>

<div class="row">
    <div class="col-md-12" style="padding-left: 20%">
        <%= form_for(@attendence, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class"center" style="display: flex; justify-content: center; padding-right: 30%;">
                <table class="table table-bordered table-striped table-responsive" style="width: 60%;">
                    <thead>
                        <tr>
                            <th>Report_id</th>
                            <th> Student_id</th>
                            <th> Present </th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><%= f.text_field :report_id,  class: "form-control" %></td>
                            <td><%= f.text_field :student_id,  class: "form-control" %></td>
                            <td><%= f.check_box :present %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="form-group" style="margin: 2%">
                <div class="col-md-offset-2 col-md-10">
                    <%= f.submit("Done", class: "btn btn-primary btn-lg btn-xlarge") %>
                </div>
            </div>
        <%end%>
    </div>
</div>